generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Prof {
  id        Int      @id @default(autoincrement())
  name      String
  email     String?
  room        Room      @relation(fields: [roomId], references: [id])
  roomId      Int
  schedules Schedules[]
  
}

model Room {
  id        Int      @id @default(autoincrement())
  name      String
  capacity  Int?
  prof      Prof[]
  schedules Schedules[]
}

model Class {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  schedules   Schedules[]
}

model Schedules {
  id          Int      @id @default(autoincrement())
  prof     Prof  @relation(fields: [profId], references: [id])
  profId   Int
  class       Class     @relation(fields: [classId], references: [id])
  classId     Int
  room        Room      @relation(fields: [roomId], references: [id])
  roomId      Int
  startTime   DateTime
  endTime     DateTime
}
